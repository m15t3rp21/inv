@using DNRPS.POIMS.Web.Models;
@using DNRPS.POIMS.CommonResources;
@model RedirectModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta http-equiv="PRAGMA" content="NO-CACHE" />
    <meta http-equiv="Cache-control" content="no-cache" />
    <title>@string.Format(@Resources.WebPages.TitleFormat_Arg0Title, @Resources.WebPages.RedirectPopup)</title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    @Styles.Render("~/Content/css")
</head>
<body style="background: #FFF !important;">
    @if (string.IsNullOrEmpty(Model.HostNameOfMainUrl))
    {
        <span class="errorMessage">@Html.Raw(Errors.HtmlPageNotFoundErrorMessage)</span>
    }
    else
    {
        <div id="divOverlay" class="overlay" style="display: block;">
            <div id="divLoading" class="loader">
                @Names.HtmlLoadingInProgress
            </div>
        </div>
        <script type="text/javascript" language="javascript">
            (function () {
                var imageObject = new Image();
                imageObject.src = 'http://' + '@Model.HostNameOfMainUrl' + '/Beacon.gif';
                setTimeout(function () {
                    if (imageObject.height > 0) {
                        window.location = '@Model.MainUrl';
                    }
                    else {
                        window.location = '@Model.AlternateUrl';
                    }
                }, 1000);
            })();
        </script>
    }
</body>
</html>